<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
    </style>

    <style name="MyDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/primary_dark_color</item>
    </style>

    <style name="DefaultToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/accent_color</item>
        <item name="android:textColorSecondary">@color/accent_color</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/accent_color</item>
    </style>

    <style name="HomeButtonStyle">
        <item name="android:background">@drawable/home_button</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/accent_color</item>
    </style>

    <style name="HomeButtonTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">@color/accent_color</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="readFabIconStyle">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/fab_icon_read</item>
        <item name="android:layout_gravity">right|bottom</item>
        <item name="android:layout_marginBottom">90dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <style name="fabIconStyle">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/fab_icon</item>
        <item name="android:layout_gravity">right|bottom</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/primary_color</item>
    </style>
</resources>
