<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bendani.bibliomania.bookinfo.GeneralBookInfoFragment">

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cover_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RatingBar
            android:id="@+id/rating"
            style="?android:attr/ratingBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="45dp"
            android:isIndicator="true"
            android:max="10"
            android:numStars="10"
            android:rating="0.0"
            android:stepSize="0.0" />

        <com.bendani.bibliomania.generic.presentation.customview.FloatingLabelTextview
            android:layout_marginTop="20dp"
            android:id="@+id/book_info_title_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:textText="some title"
            app:hintText="@string/book_title"/>

        <com.bendani.bibliomania.generic.presentation.customview.FloatingLabelTextview
            android:id="@+id/book_info_subtitle_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            app:textText="subtitle"
            app:hintText="@string/book_subtitle"/>

        <com.bendani.bibliomania.generic.presentation.customview.FloatingLabelTextview
            android:id="@+id/book_info_author_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            app:textText="subtitle"
            app:hintText="@string/book_author"/>

        <com.bendani.bibliomania.generic.presentation.customview.FloatingLabelTextview
            android:id="@+id/book_info_isbn_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            app:textText="subtitle"
            app:hintText="@string/book_isbn"/>
    </LinearLayout>


</RelativeLayout>
